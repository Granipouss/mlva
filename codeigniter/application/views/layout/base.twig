<!DOCTYPE html>
<html lang="fr">
	<head>
		{% block head %}
			<meta charset="utf-8">
			<meta http-equiv="X-UA-Compatible" content="IE=edge">
			<meta name="viewport" content="width=device-width, initial-scale=1">
			<meta name="description" content="">

			<title>MLVA - {% block title %}Home{% endblock %}</title>
			<link rel="icon" href="{{ base_url('dist/img/favicon.ico') }}">

			<!-- Bootstrap core CSS -->
			<link href="{{ base_url('dist/css/bootstrap.css') }}" rel="stylesheet" />

			<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
			<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
			<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
			<![endif]-->
		{% endblock %}
	</head>

	<body>
		<div class="container">
			<!-- === HEADER =========================== -->
			{% block header %}
				<div class="header">
					<div class="row">
						<!-- Nav tabs -->
						<ul class="nav nav-tabs" role="tablist">
							<li role="presentation"><a href="index.html">Home</a></li>
							<li role="presentation" class="active"><a href="#users" aria-controls="users" role="tab" data-toggle="tab">Users</a></li>
							<li role="presentation"><a href="#datas" aria-controls="datas" role="tab" data-toggle="tab">Databases</a></li>
						</ul>
						<h1 onclick="document.location = 'index.html';">
							<img src="{{base_url('dist/img/logo.png')}}" class="logo"/>
							MLVA
							<small>for Microbes Genotyping</small>
						</h1>
					</div>
					<div class="row">
						<!-- Tab panes -->
						<div class="tab-content">
							<div role="tabpanel" class="tab-pane active" id="users">
								<ul class="nav nav-list">
									<li role="presentation" class="active"><a href="#">Log out</a></li>
									<li role="presentation"><a href="#">my Profile</a></li>
									<li role="presentation"><a href="#">my Groups</a></li>
								</ul>
							</div>
							<div role="tabpanel" class="tab-pane" id="datas">
								<ul class="nav nav-list">
									<li role="presentation" class="active"><a href="#">Create New Database</a></li>
									<li role="presentation"><a href="#">my Databases</a></li>
									<li role="presentation"><a href="#">Public Databases</a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			{% endblock %}

			{% block content %}{% endblock %}

			{% include "layout/footer.twig" %}

		</div> <!-- /container -->

		{% block footer_js %}
			<!-- Bootstrap core JavaScript
			================================================== -->
			<!-- Placed at the end of the document so the pages load faster -->
			<script src="{{ base_url('dist/js/jquery.min.js') }}"></script>
			<!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>-->
			<script src="{{ base_url('dist/js/bootstrap.min.js') }}"></script>
		{% endblock %}
	</body>
</html>
