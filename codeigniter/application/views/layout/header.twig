<div class="header">
	<div class="row">
		<!-- Nav tabs -->
		<ul class="nav nav-tabs" role="tablist">
			<li role="presentation"><a href="{{base_url()}}">Home</a></li>
			<li role="presentation" {% if menu != "databases" %}class="active"{% endif %}><a href="#users" aria-controls="users" role="tab" data-toggle="tab">Users</a></li>
			<li role="presentation" {% if menu == "databases" %}class="active"{% endif %}><a href="#datas" aria-controls="datas" role="tab" data-toggle="tab">Databases</a></li>
		</ul>
		<h1 onclick="document.location = '{{base_url()}}';">
			<img src="{{base_url('dist/img/logo.png')}}" class="logo"/>
			MLVA
			<small>for Microbes Genotyping</small>
		</h1>
	</div>
	<div class="row">
		<!-- Tab panes -->
		<div class="tab-content">
			<div role="tabpanel" class="tab-pane {% if menu != 'databases' %}active{% endif %}" id="users">
				<ul class="nav nav-list">
					{% if isLogged() %}
						<li role="presentation"><a href="{{base_url('users/logout/' ~ session.key)}}">Log out</a></li>
						<li role="presentation"><a href="{{base_url('users/dashboard')}}">My Dashboard</a></li>
						<li role="presentation"><a href="{{base_url('users')}}">Users list</a></li>
					{% else %}
						<li role="presentation"><a href="{{base_url('users/login')}}">Log in</a></li>
						<li role="presentation"><a href="{{base_url('users/signup')}}">Sign up</a></li>
					{% endif %}
					{% if checkRight('admin') %}
						<li role="presentation"><a href="{{base_url('admin')}}">Admin dashboard</a></li>
					{% endif %}
				</ul>
			</div>
			<div role="tabpanel" class="tab-pane {% if menu == 'databases' %}active{% endif %}" id="datas">
				<ul class="nav nav-list">
					{% if isLogged() %}
						<li role="presentation" class="active"><a href="{{base_url('databases/create')}}">Create New Database</a></li>
						<li role="presentation"><a href="{{base_url('databases/user')}}">My Personnal Databases</a></li>
						<li role="presentation"><a href="{{base_url('databases/groups')}}">My Groups Databases</a></li>
					{% endif %}
					<li role="presentation"><a href="{{base_url('databases/public')}}">Public Databases</a></li>
				</ul>
			</div>
		</div>
	</div>
</div>
