{% extends "layout/base.twig" %}

{% block title %}Edit a group | {{group.name}}{% endblock %}

{% block breadcrumb %}
<li><a href="{{base_url()}}">Home</a></li>
<li><a href="{{ base_url('admin/') }}">Administration</a></li>
<li class="active">Edition</li>
{% endblock %}

{% block presenter_title %}{{ block('title') }}{% endblock %}

{% block content %}
<div class="row section-home-grey padding-top-30 padding-bottom-30">
    <div class="container">
      {% include 'layout/info_messages.twig'%}
      <div class="col-sm-6 col-xs-12">
          {{form_open('admin/edit_group/' ~ group.id)}}
            <div class="form-group">
              <label for="name">Name (spaces will be removed, please use dashes)</label>
              <input type="name" class="form-control input-lg" id="name" name="name" placeholder="Name of the group" value="{{set_value('name')|default(group.name)}}">
            </div>
            <div class="form-group">
              <label for="name">Permissions</label>
              <textarea class="form-control" name="permissions" rows="3">{{set_value('permissions')|default(group.permissions)|raw}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Edit</button>
          {{form_close()}}
      </div>
  </div>
</div>
{% endblock %}
