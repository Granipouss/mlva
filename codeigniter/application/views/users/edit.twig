{% extends "layout.twig" %}

{% block title %}Modification des informations | {{user.username}}{% endblock %}

{% block head %}
{{parent()}}
<link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block breadcrumb %}
<li><a href="{{base_url()}}">Home</a></li>
<li><a href="{{ base_url('users/') }}">Espace Membre</a></li>
<li class="active">Edition</li>
{% endblock %}

{% block presenter_title %}{{ block('title') }}{% endblock %}

{% block container %}
<div class="row section-home-grey padding-top-30 padding-bottom-30">
    <div class="container">
      {% include 'partials/info_messages.twig'%}
      <div class="col-sm-6 col-xs-12">
          {{form_open('users/edit/' ~ user.id)}}
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control input-lg" id="email" name="email" placeholder="E-mail" value="{{set_value('email')|default(user.email)}}">
            </div>
            <div class="form-group">
              <label for="password">Mot de Passe</label>
              <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Mot de Passe" value="{{set_value('password')}}">
            </div>
            <div class="form-group">
              <label for="password_confirm">Confirmation du Mot de Passe</label>
              <input type="password" class="form-control input-lg" id="password_confirm" name="password_confirm" placeholder="Confirmation" value="{{set_value('password_confirm')}}">
            </div>
            {% if checkRight('edit', 'users') %}
            <div class="form-group">
              {{forms.select2Groups(user_groups, 'groups', groups)}}
            </div>
            {% endif %}
            <div class="checkbox">
              <label>
                {{forms.checkbox(1, 'notif_comment', 'Recevoir un e-mail lorsque une de mes vidéos est commentée')}}
              </label>
            </div>
            <div class="checkbox">
              <label>
                {{forms.checkbox(0, 'suscribe', 'S\'abonner à la newsletter (maximum 1 email par mois)')}}
              </label>
            </div>
            <button type="submit" class="btn btn-orange btn-lg">Editer</button>
          {{form_close()}}
      </div>
  </div>
</div>
{% endblock %}

{% block footer_js %}
{{parent()}}
<script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
<script type="text/javascript">
  $("#groups").select2({language: "fr"});
</script>
{% endblock %}
