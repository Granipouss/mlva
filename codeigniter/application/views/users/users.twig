{% extends "layout/base.twig" %}

{% block title %}
	{{page_infos.title|default('Liste des membres')}}
{% endblock %}

{% block content %}
	<!-- Results -->
	<div class="row section-home-grey padding-top-30">
		<div class="container">
			<div class="col-xs-12">
				{% if isLogged() %}
					<h4><a href="{{base_url('users/logout/' ~ session.key)}}">Logout</a></h4>
				{% else %}
					<h4><a href="{{base_url('users/login')}}">Connection</a></h4>
				{% endif %}
				<h3>{{plural('Utilisateur', count)}} </h3>
				<div class="row col-xs-12 news-search-result">
					{% for user in users %}
						<div class="col-xs-6 col-md-3">
							<h4><a href="">{{user.username}}</a></h4>
							{% if isOwnerById(user.userId) or checkRight('edit', 'users') %}
								<p>
									<a href="{{base_url('users/edit/' ~ user.userId)}}">Modifier</a>
								</p>
							{% endif %}
							<p>
								{% for group_id, group in user.groups %}
									<span class="label label-default">{{group}}</span>
								{% endfor %}
							</p>
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="col-xs-12">
				<nav>
					<ul class="pager btn-lg">
						{{pagination | raw}}
					</ul>
				</nav>
			</div>
		</div>
	</div>
{% endblock %}
