<table class="table table-hover database-list">
	<thead><tr>
		<th></th>
		<th>Name</th>
		<th>Owner</th>
		<th>Creation Date</th>
		<th>Strains</th>
		<th>Panels</th>
		<th>Stuffs</th>
	</tr></thead>
	<tbody>
		{% for base in bases %}
			<tr onclick="document.location = '{{ base_url("databases/" ~ base.id) }}';">
				<th scope="row"></th>
				<td>{{ base.name }}</td>
				<td>{{ base.creator_name }}</td>
				<td>{{ base.created_at }}</td>
				<td>{{ (base.strains_amount - base.disabled_strains_nb) }} / {{ base.strains_amount }}</td>
				<td>{{ base.panels_amount }}</td>
				<td>
					<span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
					<span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
					<span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
					<span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
					<span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
					<span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
