{% extends "layout/base.twig" %}

{% block title %}Public Databases{% endblock %}
{% set menu = "databases" %}

{% block content %}
<div class="row"><div class="col-sm-12">
	<h3 class="title-border blue">Public Databases</h3>
	<p>Here are, the public databases, everyone (including non-user) can read and export them. Click on column headers do sort the databases.</p>
	
	{% include "databases/list.twig" %}
	
</div></div>
{% endblock %}

{% block footer_js %}
{{ parent () }}
<script src="{{ base_url('dist/js/jquery.tablesorter.min.js') }}"></script>
<script>
	$(document).ready(function() {
		// Table sorter
		$(".database-list").tablesorter({
			theme: 'blue',
			headerTemplate: '{content} <small>{icon}</small>',
		});
  });
</script>
{% endblock %}