{% extends "layout/base.twig" %}

{% block title %}Public Databases{% endblock %}
{% set menu = "databases" %}

{% block content %}
<div class="row"><div class="col-sm-12">
	<h3 class="title-border blue">Public Databases</h3>
	<p>Public databases, everyone can read and export data. Click on column headers to sort the list.</p>

	{% include "databases/list.twig" %}

</div></div>
{% endblock %}

{% block footer_js %}
{{ parent () }}
<script src="{{ base_url('dist/js/tablesorter.min.js') }}"></script>
<script>
$(document).ready(function () {
	// Table sorter
	$('.database-list').tablesorter({
		sortList: [[1, 0]],
		headers: { 0: { sorter: false } },
		cssIcon: 'glyphicon',
		cssIconAsc: 'glyphicon-triangle-top',
		cssIconDesc: 'glyphicon-triangle-bottom',
		cssIconNone: 'glyphicon-triangle-right text-muted',
		headerTemplate: '{content} <small>{icon}</small>'
	})
})
</script>
{% endblock %}
