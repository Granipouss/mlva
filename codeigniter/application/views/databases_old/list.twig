<table class="table table-hover database-list">
	<thead><tr>
		<th></th>
		<th>Name</th>
		<th>Owner</th>
		<th>Creation Date</th>
		<th>Strains</th>
		<th>Panels</th>
	</tr></thead>
	<tbody>
		{% for base in bases %}
			<tr onclick="document.location = '{{ base_url("databases/view/" ~ base.id) }}';">
				<th scope="row"></th>
				<td>{{ base.name }}</td>
				<td>{{ base.creator_name }}</td>
				<td>{{ base.created_at }}</td>
				<td>{{ base.strains_amount }}</td>
				<td>{{ base.panels_amount }}</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
